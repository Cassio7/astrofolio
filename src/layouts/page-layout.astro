---
import { capitalizeFirstLetter } from "@/lib/utils";
import Layout from "./layout.astro";

import Navbar from "@/components/navbar/index.astro";
import Footer from "@/components/footer.astro";
import LinkBtn from "@/components/link-btn.astro";
import { ArrowLeft } from "lucide-react";

interface Props {
  title: string;
  description: string;
  backLink?: string;
}

const { title, description, backLink } = Astro.props;
---

<Layout title={`${title} | Louai.b`}>
  <Navbar />
  <main
    class="mx-auto min-h-[calc(100vh-120px)] max-w-4xl space-y-12 border-x border-dashed px-6 py-10"
    aria-label="Main content"
  >
    <header class="space-y-3">
      {
        backLink && (
          <LinkBtn href={backLink}>
            <ArrowLeft />
          </LinkBtn>
        )
      }
      <h2 class="text-3xl font-bold">{capitalizeFirstLetter(title)}</h2>
      <p class="max-w-3xl text-sm">{description}</p>
    </header>

    <slot />
  </main>
  <Footer />
</Layout>
