---
import Footer from "@/components/footer.astro";
import Navbar from "@/components/navbar/index.astro";
import Pattern from "@/components/ui/pattern.astro";
import Layout from "@/layouts/layout.astro";
---

<Layout title="Alessio Cassieri">
  <Navbar />
  <Pattern className="h-14" />
  <main class="mx-auto min-h-screen max-w-3xl" aria-label="Main content">
    <section class="flex h-[60vh] flex-col items-center justify-center text-center">
      <h1 class="mb-4 text-6xl font-extrabold">404</h1>
      <h2 class="mb-2 text-2xl font-semibold">Page not found!</h2>
      <p class="mb-6 text-muted-foreground">The page you are looking for does not exist or has been removed.</p>
      <a
        href="/"
        class="group relative mx-auto inline-flex flex-col items-center justify-center text-xl font-medium text-primary transition duration-150 hover:text-primary"
      >
        <span class="mb-[2px]">Home</span>
        <span
          class="absolute -bottom-px h-[1px] w-0 rounded-full bg-primary transition-all duration-150 group-hover:w-full"
        ></span>
      </a>
    </section>
  </main>

  <Footer />
</Layout>
