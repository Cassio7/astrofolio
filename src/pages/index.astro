---
import Layout from "@/layouts/layout.astro";
import Navbar from "@/components/navbar/index.astro";
import Footer from "@/components/footer.astro";
import Pattern from "@/components/pattern.astro";
import Profile from "@/components/profile.astro";
import About from "@/components/about.astro";
import TechStack from "@/components/tech-stack.astro";
import Experience from "@/components/experience.astro";
---

<Layout title="Louai Boumediene">
  <Navbar className="top-1" />

  <main
    aria-label="Main content"
    class="mx-auto min-h-[calc(100vh-120px)] max-w-4xl"
  >
    <Pattern className="screen-line-after h-20" />

    <Profile />
    <Pattern />
    <About />
    <Pattern />
    <TechStack />
    <Pattern />
    <Experience />
    <Pattern />
  </main>

  <Footer />
</Layout>
