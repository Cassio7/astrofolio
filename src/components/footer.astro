import { Icons } from "./icons";

const socialLinks = [
  {
    icon: Icons.github,
    url: "https://github.com/Louai-Zokerburg",
  },
  {
    icon: Icons.linkedin,
    url: "https://www.linkedin.com/in/louai-boumediene-018919262/",
  },
  {
    icon: Icons.x,
