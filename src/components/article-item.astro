---
import type { CollectionEntry } from "astro:content";
import { NotebookPen } from "lucide-react";

interface Props {
  article: CollectionEntry<"blog">;
}

const { article } = Astro.props;

const formattedDate = new Intl.DateTimeFormat("en-GB", {
  day: "2-digit",
  month: "short",
  year: "numeric",
}).format(article.data.pubDatetime);
---

<a
  href={`/articles/${article.id}`}
  class="group flex w-full cursor-pointer items-center justify-start gap-6 border-b py-6 last:border-b-0"
>
  <NotebookPen className="size-5 min-w-max" strokeWidth={1.5} />

  <div class="flex flex-col items-start justify-center gap-2">
    <h3 class="text-lg font-semibold underline-offset-6 group-hover:underline">
      {article.data.title}
    </h3>

    <ul class="flex items-center justify-start gap-x-4">
      {
        article.data.tags.map(tag => (
          <li class="text-xs font-semibold">#{tag}</li>
        ))
      }
    </ul>
    <p class="text-xs text-foreground">
      {formattedDate} | {article.data.readTime}
    </p>
  </div>
</a>
