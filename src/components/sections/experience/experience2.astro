---
import Box from "@/components/box/index.astro";
import BoxHeader from "@/components/box/header.astro";
import BoxTitle from "@/components/box/title.astro";

import Faqs, { type FAQType } from "@/components/ui/accordion.astro";

export const faqs: FAQType[] = [
  {
    question: "What is Astro?",
    answer: [
      "Astro is a modern front-end framework for building fast, content-focused websites.",
      "It supports multiple UI frameworks like React, Vue, and Svelte while generating static sites by default.",
    ],
  },
  {
    question: "How does Astro differ from other frameworks?",
    answer: [
      "Astro ships zero JavaScript by default, making it highly optimized for performance.",
      "Unlike React or Vue, Astro's islands architecture allows interactive components to load only when needed.",
    ],
  },
  {
    question: "Can I use Astro with Tailwind CSS?",
    answer: [
      "Yes, Astro has built-in support for Tailwind CSS.",
      "You can install Tailwind via npm and configure it in your Astro project for styling.",
    ],
  },
  {
    question: "Is Astro good for SEO?",
    answer: [
      "Yes, Astro generates static HTML pages by default, making them highly optimized for search engines.",
      "You can also integrate meta tags, Open Graph tags, and structured data easily.",
    ],
  },
  {
    question: "Does Astro support Markdown and MDX?",
    answer: [
      "Yes, Astro has first-class support for Markdown and MDX.",
      "You can write content in `.md` or `.mdx` files and use them directly in your Astro components.",
    ],
  },
];
---

<Box>
  <BoxHeader>
    <BoxTitle> About </BoxTitle>
  </BoxHeader>
  <Faqs faqs={faqs} />
</Box>
